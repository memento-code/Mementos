<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/typeImageTest"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/text_type_icon" />

        <TextView
            android:id="@+id/titleTest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Тестовый тест теста"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/typeImageTest"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageTimeTest"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="40dp"
            android:alpha="0.65"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/clock_icon" />

        <TextView
            android:id="@+id/timeTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="15-20 мин"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageTimeTest"
            app:layout_constraintStart_toEndOf="@+id/imageTimeTest"
            app:layout_constraintTop_toTopOf="@+id/imageTimeTest"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/countQuestionsTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="27 вопросов"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.75" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:alpha="0.55"
            app:layout_constraintStart_toStartOf="@+id/imageTimeTest"
            app:layout_constraintTop_toBottomOf="@+id/imageTimeTest"
            app:srcCompat="@drawable/brain_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>